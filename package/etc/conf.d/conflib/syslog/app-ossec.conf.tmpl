block parser ossec-parser() {    
 channel {
        rewrite {
            set("ossec", value("fields.sc4s_vendor_product"));        
            set("main", value(".splunk.index"));
            set("ossec:alerts", value(".splunk.source"));
            set("ossec", value(".splunk.sourcetype"));
            set("t_hdr_msg", value(".splunk.sc4s_template"));
            set("1", value(".is_known_nix"));
            set-tag("log_path_known");
            set-tag("ossec");            
        };       
   };
};
application ossec[syslog] {
	filter { 
        program("ossec");
    };	
    parser { ossec-parser(); };   
};