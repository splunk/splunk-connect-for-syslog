{{ $context := dict "port_id" "JUNIPER_IDP" "parser" "common"}}

{{ tmpl.Exec "t/source_network.t" $context  }}

#The template will be used to produce two log paths
{{define "log_path"}}
log {
#The first log path is linked to the default (shared) 514
{{ if eq (.) "yes" }}
    source(s_default-ports);
    filter(f_is_rfc5424_strict);
    filter(f_juniper_idp);
{{ end }}
#The second log path will only generate if the value of one OR more port variables is set
{{ if eq (.) "no" }}
    source (s_dedicated_port_JUNIPER_IDP);
{{ end }}

    rewrite { r_set_splunk_dest_default(sourcetype("juniper:idp"), index("netids"), template("t_hdr_sdata_msg"))};
    parser {
                p_add_context_splunk(key("juniper_idp"));
    };

    destination(d_hec);  #--HEC--

    flags(flow-control);
};{{end}}
{{ tmpl.Exec "log_path" "yes"  }}
{{ tmpl.Exec "log_path" "no"  }}
