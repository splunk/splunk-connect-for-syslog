# ALCATEL_SWITCH
{{- /* The following provides a unique port source configuration if env var(s) are set */}}
{{- $context := dict "port_id" "ALCATEL_SWITCH" "parser" "rfc3164" }}
{{- tmpl.Exec "t/source_network.t" $context }}

filter f_soup_is_alcatel_switch {
    program('swlogd' type(string) flags(prefix))
};

log {
    junction {
        channel {
        # Listen on the specified dedicated port(s) for ALCATEL_SWITCH traffic
            source (s_ALCATEL_SWITCH);
            flags (final);
	    };
        channel {
        # Listen on the default port (typically 514) for ALCATEL_SWITCH traffic
            source (s_DEFAULT);
            filter(f_soup_is_alcatel_switch);
            flags(final);
        };
    };

    
    rewrite {
        set("alcatel_switch", value("fields.sc4s_vendor_product"));
        r_set_splunk_dest_default(sourcetype("alcatel:switch"))
    };
    parser { p_add_context_splunk(key("alcatel_switch")); };


    parser (compliance_meta_by_source);
    rewrite { set("$(template ${.splunk.sc4s_template} $(template t_hdr_msg))" value("MSG")); };

{{ if (print (getenv "SC4S_DEST_ALCATEL_SWITCH_ALT_FILTER")) }}
# HEC destination is *not* included by default for filtered destinations

    if (filter({{ print (getenv "SC4S_DEST_ALCATEL_SWITCH_ALT_FILTER") }})) {
{{- if (print (getenv "SC4S_DEST_ALCATEL_SWITCH_FILTERED_ALTERNATES")) }}
        {{ getenv "SC4S_DEST_ALCATEL_SWITCH_FILTERED_ALTERNATES" | regexp.ReplaceLiteral "^" "destination(" | regexp.ReplaceLiteral "[, ]+" ");\n        destination(" }});
{{- end }}
    }
    else {
{{- end }}

{{- if or (conv.ToBool (getenv "SC4S_DEST_SPLUNK_HEC_GLOBAL" "yes")) (conv.ToBool (getenv "SC4S_DEST_ALCATEL_SWITCH_HEC" "no")) }}
    destination(d_hec);
{{- end}}

{{- if or (conv.ToBool (getenv "SC4S_ARCHIVE_GLOBAL" "no")) (conv.ToBool (getenv "SC4S_ARCHIVE_ALCATEL_SWITCH" "no")) }}
    destination(d_archive);
{{- end}}

{{- if (print (getenv "SC4S_DEST_GLOBAL_ALTERNATES")) }}
    {{ getenv "SC4S_DEST_GLOBAL_ALTERNATES" | regexp.ReplaceLiteral "^" "destination(" | regexp.ReplaceLiteral "[, ]+" ");\n    destination(" }});
{{- end }}

{{- if (print (getenv "SC4S_DEST_ALCATEL_SWITCH_ALTERNATES")) }}
    {{ getenv "SC4S_DEST_ALCATEL_SWITCH_ALTERNATES" | regexp.ReplaceLiteral "^" "destination(" | regexp.ReplaceLiteral "[, ]+" ");\n    destination(" }});
{{- end }}

{{- if (print (getenv "SC4S_DEST_ALCATEL_SWITCH_ALT_FILTER")) }}
    };
{{- end }}

    flags(flow-control,final);
};
