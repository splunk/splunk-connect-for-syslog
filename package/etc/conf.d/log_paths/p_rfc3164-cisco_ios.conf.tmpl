#The template will be used to produce two log paths
#The first log path is linked to the default (shared) 514
{{ if eq (getenv "confgen_sourcedefault") "yes" }}
    source(s_default-ports);
    filter(f_cisco_ios);
{{ end }}
#The second log path will only generate if the value of one OR more port variables is set
{{ if eq (getenv "confgen_sourcedefault") "no" }}
    source {
        dedicated_port(
            tcp_port({{ getenv "SCS_LISTEN_CISCO_IOS_TCP_PORT" }})
            udp_port({{ getenv "SCS_LISTEN_CISCO_IOS_UDP_PORT" }})

        )
    };
{{ end }}

    rewrite { r_set_splunk_dest_default(sourcetype("cisco:ios"), index("netops"), template("t_msg_only"))};
    parser {
        p_add_context_splunk(key("cisco_ios"));
    };

    destination(d_hec);  #--HEC--

    flags(flow-control);
