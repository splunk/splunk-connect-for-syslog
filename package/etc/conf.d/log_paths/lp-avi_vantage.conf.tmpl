{{- if or (conv.ToBool (getenv "SC4S_ARCHIVE_GLOBAL" "no")) (conv.ToBool (getenv "SC4S_ARCHIVE_AVI_VANTAGE" "no")) }}
    destination(d_archive);
{{- end}}

